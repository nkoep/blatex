% Define style of vectors and matrices.
\if@boldsymbols
  \newcommand\@makevector[1]{%
    \expandafter\newcommand\csname v#1\endcsname{\boldsymbol{#1}}
  }
  \newcommand\@makematrix[1]{%
    \expandafter\newcommand\csname m#1\endcsname{\boldsymbol{#1}}
  }
\else
  \newcommand\@makevector[1]{%
    \expandafter\newcommand\csname v#1\endcsname{#1}
  }
  \newcommand\@makematrix[1]{%
    \expandafter\newcommand\csname m#1\endcsname{#1}
  }
\fi

% Vectors
\def\@makevector#1{%
  \expandafter\def\csname v#1\endcsname{\mathbf{#1}}%
}
\def\@makevectors#1{%
  \ifx#1\@makevectors\else\@makevector#1\expandafter\@makevectors\fi%
}
\@makevectors abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ\@makevectors

