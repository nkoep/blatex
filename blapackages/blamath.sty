% Optimization problems
%   #1: star (for single line problems)
%   #2: min./max./minimize/maximize
%   #3: domain (optional)
%   #4: objective
%   #5: s.t./subject to
%   #6: constraints
\DeclareDocumentCommand{\Problem}{s m o m m m}{%
  \def\@padding{\;\;}%
  \IfBooleanTF{#1}{%
    \IfValueTF{#3}{\underset{#3}{\text{#2}}}{\text{#2}}%
    \@padding #4%
    \IfValueT{#5}{%
      \IfValueT{#6}{%
        \@padding \text{#5} \@padding #6%
      }%
    }%
  }{%
    \begin{array}{cl}
      \IfValueTF{#3}{\underset{#3}{\text{#2}}}{\text{#2}} &
      \displaystyle #4 \\
      \text{#5} &
      \hspace{-\arraycolsep}
      \begin{array}[t]{l}
        #6
      \end{array}
    \end{array}
  }
}

